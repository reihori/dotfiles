format = """
$username\
$hostname\
$directory\
$git_branch\
$git_status\
$fill\
$line_break\
$jobs\
$status\
$character\
"""

[username]
format = "[$user]($style)@"
detect_env_vars = ["container"]

[hostname]
format = "[$hostname]($style) "
style = "bold green"
detect_env_vars = ["container"]
ssh_only = false

[git_branch]
symbol = ""

[fill]
symbol = "\u2500"
style = "dimmed blue"

[status]
format = "[$status]($style) "
disabled = false

[character]
{{ if eq .chezmoi.uid "0" }}
success_symbol = '[#](bold red)'
error_symbol = '[#](bold red)'
{{ else }}
success_symbol = '[\$](blue)'
error_symbol = '[\$](blue)'
{{ end }}
